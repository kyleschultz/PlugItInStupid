<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeTimeZone">

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="337dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="33dp"
        android:text="Select Time Zone"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />


    <RadioGroup

        android:id="@+id/radioGroup3"
        android:layout_width="243dp"
        android:layout_height="405dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/timeButton1"
            android:layout_width="251dp"
            android:layout_height="50dp"
            android:text="Eastern Standard Time" />

        <RadioButton
            android:id="@+id/timeButton2"
            android:layout_width="251dp"
            android:layout_height="50dp"
            android:text="Central Standard Time" />

        <RadioButton
            android:id="@+id/timeButton3"
            android:layout_width="251dp"
            android:layout_height="50dp"
            android:text="Mountain Standard Time" />

        <RadioButton
            android:id="@+id/timeButton4"
            android:layout_width="251dp"
            android:layout_height="50dp"
            android:text="Pacific Standard Time" />

        <RadioButton
            android:id="@+id/timeButton5"
            android:layout_width="251dp"
            android:layout_height="50dp"
            android:text="Alaska Standard Time" />

        <RadioButton
            android:id="@+id/timeButton6"
            android:layout_width="251dp"
            android:layout_height="50dp"
            android:text="Hawaii-Aleutian Standard Time" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>